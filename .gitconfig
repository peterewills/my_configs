[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

[user]
	name = Peter Wills
	email = peter.e.wills@gmail.com

[alias]
	nicelog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	nicelog2 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	unstage = reset HEAD --

[core]
	editor = emacs
	excludesfile = ~/.gitignore_global

[push]
	default = simple

[color]
	ui = auto
[github]
	user = peterewills
